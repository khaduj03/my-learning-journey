<div class="container mt-4">
    <h1 class="mb-4">Dashboard</h1>
  
    <div class="mb-4 text-center">
      <% if (req.user && req.user.img) { %>
        <img 
          src="/uploads/<%= req.user.img %>" 
          alt="Profile Image" 
          class="rounded-circle" 
          style="width: 100px; height: 100px; object-fit: cover;"
        />
      <% } else { %>
        <img 
          src="/default-profile.png" 
          alt="Default Profile Image" 
          class="rounded-circle" 
          style="width: 100px; height: 100px; object-fit: cover;"
        />
      <% } %>
    </div>
  
    <form action="/dashboard/editUser" method="POST" enctype="multipart/form-data" class="mb-4">
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          type="text"
          id="username"
          name="username"
          value="<%= req.user ? req.user.username : '' %>"
          placeholder="Username"
          required
          class="form-control"
        />
      </div>
  
      <div class="mb-3">
        <label for="img" class="form-label">Profile Image</label>
        <input
          type="file"
          id="img"
          name="img"
          accept="image/*"
          class="form-control"
        />
      </div>
  
      <button type="submit" class="btn btn-primary">Update Profile</button>
    </form>
  
    <form action="/auth/logout" method="POST">
      <button type="submit" class="btn btn-danger">Logout</button>
    </form>
  </div>
  