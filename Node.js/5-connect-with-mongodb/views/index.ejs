<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>User Management</title>
  <link rel="stylesheet" href="/styles.css">
  <head>
    <meta charset="UTF-8">
    <title>Users</title>
    <style>
      .flash-message {
        padding: 10px;
        margin-bottom: 10px;
        border-radius: 5px;
      }
      .success {
        background-color: #e0ffe0;
        color: green;
      }
      .error {
        background-color: #ffe0e0;
        color: red;
      }
    </style>
  </head>
</head>
<body>
  <div class="container">
    <h1>ğŸ‘¥ User List</h1>


    <body>
    
      <!-- âœ… Flash success message -->
      <% if (message && message.length > 0) { %>
        <div class="flash-message success"><%= message %></div>
      <% } %>
    
      <!-- âŒ Flash validation errors -->
      <% if (errors && errors.length > 0) { %>
        <% errors.forEach(function(error) { %>
          <div class="flash-message error"><%= error.msg %></div>
        <% }); %>
      <% } %>
    <table class="user-table">
      <thead>
        <tr>
          <th>ID</th>
          <th>First Name</th>
          <th>Email</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% users?.forEach(user => { %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.first_name %></td>
            <td><%= user.email %></td>
            <td>
              <form action="/users/<%= user.id %>?method=DELETE" method="POST" style="display:inline;">
                <button type="submit">ğŸ—‘ Delete</button>
              </form>
              <a href="users/<%= user.id %>">âœï¸ Update</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <h2>â• Add New User</h2>
    <form action="/users/add-user" method="POST">
      <label>First Name:</label>
      <input type="text" name="first_name" />

      <label>Email:</label>
      <input type="email" name="email" />

      <label>Password:</label>
      <input type="password" name="password" />

      <button type="submit" class="btn">Add User</button>
    </form>
  </div>
</body>
</html>
